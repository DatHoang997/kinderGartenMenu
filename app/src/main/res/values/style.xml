<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleDialogUpdateVersion" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="date_picker_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/teal_200</item>                   <!--header background-->
        <item name="android:textColorPrimary">#1E1E1E</item> <!--days of the month-->
        <item name="android:textColorSecondary">#3C3C434D</item>    <!--days of the week-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>