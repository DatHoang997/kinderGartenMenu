<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boder_bg_dialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tên món ăn"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_name_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boder_edt_dialog"
        android:gravity="center_vertical"
        android:hint="Nhập tên món ăn"
        android:maxLines="2"
        android:minHeight="36dp"
        android:padding="4dp"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_add" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Mô tả"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_add" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_name_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boder_edt_dialog"
        android:hint="Nhập mô tả món ăn"
        android:maxLines="4"
        android:minHeight="72dp"
        android:gravity="top"
        android:padding="4dp"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_des" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Trạng thái"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_des" />

    <CheckBox
        android:id="@+id/cb_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="36dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_des"
         app:layout_constraintLeft_toRightOf="@+id/txt_name_status" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_del_dialog"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp"
        android:text="Xóa"
        android:background="@drawable/background_radius_15"
        android:layout_marginTop="48dp"
         android:backgroundTint="#CA2727"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_status" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_dialog"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/background_radius_15"
        android:backgroundTint="#4C9134"
        android:text="Lưu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_status" />

</androidx.constraintlayout.widget.ConstraintLayout>