<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:text="Chọn Bữa"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_spinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/boder_edt_dialog"
        android:minWidth="80dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_state">

        <com.example.myapplication.viewcustom.UserSelectSpinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_menu_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="10dp"
        android:text="Chọn Ngày"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_name_state"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_date_value"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/boder_edt_dialog"
        android:padding="8dp"
        android:text="02/09/2022"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/ll_spinner"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_menu_date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_add_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tên món ăn 1"
        app:layout_constraintTop_toBottomOf="@id/ll_spinner"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_name_add_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boder_edt_dialog"
        android:gravity="center_vertical"
        android:hint="Nhập tên món ăn"
        android:maxLines="2"
        android:minHeight="36dp"
        android:padding="4dp"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_add_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_add_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tên món ăn 2"
        app:layout_constraintTop_toBottomOf="@id/edt_name_add_1"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_name_add_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boder_edt_dialog"
        android:gravity="center_vertical"
        android:hint="Nhập tên món ăn"
        android:maxLines="2"
        android:minHeight="36dp"
        android:padding="4dp"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_add_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_add_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tên món ăn 3"
        app:layout_constraintTop_toBottomOf="@id/edt_name_add_2"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_name_add_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boder_edt_dialog"
        android:gravity="center_vertical"
        android:hint="Nhập tên món ăn"
        android:maxLines="2"
        android:minHeight="36dp"
        android:padding="4dp"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_add_3" />




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_status_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Trạng thái"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_add_3"/>


    <CheckBox
        android:id="@+id/cb_menu_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="36dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_add_3"
        app:layout_constraintLeft_toRightOf="@+id/txt_name_status_menu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_del_dialog_menu"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp"
        android:text="Xóa"

         app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_radius_15"
        android:layout_marginTop="48dp"
        android:backgroundTint="#CA2727"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_menu_add" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_dialog_menu"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginTop="48dp"
         app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/background_radius_15"
        android:backgroundTint="#4C9134"
        android:text="Lưu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_menu_add" />
</androidx.constraintlayout.widget.ConstraintLayout>